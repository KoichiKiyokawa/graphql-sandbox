{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "checkJs": true,
    "paths": {
      "@/*": ["web/src/*"]
    }
  },
  "include": [
    "web/next-env.d.tsd.ts",
    "**/*.ts",
    "**/*.tsx",
    "prisma",
    "../server/src/features/post/resolver.ts",
    "../server/src/features/post/resolver.ts",
    "../server/src/features/post/resolver.test.ts",
    "../server/src/features/post/resolver.test.ts"
  ],
  "exclude": ["node_modules"]
}
